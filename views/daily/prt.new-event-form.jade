form#new-event-form(
    action='/calendar/add_event',
    method='post')
    input(type='hidden', name='team_name', value=team.name, data-empty-form-ignore='true')
    input(type='hidden', name='date', data-empty-form-ignore='true')
    table
        tbody
            tr
                th
                    label(for='new-event-time-select') #{label.event.time}
                td#new-event-time-select-td

            tr
                th
                    label(for='new-event-title-input') #{label.event.title}
                td
                    input#new-event-title-input.longer(
                        type='text',
                        name='title')
            tr
                th
                    label(for='new-event-detail-input') #{label.event.detail}
                td
                    textarea#new-event-detail-input.longer(name='detail', rows="4")
    .btn-area
        input#new-event-cancel-btn.btn(type='button', value=btn.new_event_cancel)
        input.btn(type='submit', value=btn.new_event_save).primary
