<li class="story-list-item book" data-id="{{redmine_id}}">
    <div class="book-page-left">
        <h2 class="story-title">
            <a href="" data-ref='{{link}}' class='black-link' target="_blank">
                {{subject}}
            </a>
        </h2>
        <br/>
        <table class="float-right half-transparent">
            <tr>
                <th>estimated</th>
                <td>{{estimated_hours}}h</td>
            </tr>
        </table>
    </div>
    <div class="book-page-right">
        <div class="book-page-right-inner">
            <span class="page-right-title">checkpoints</span>
            <ul class="checkpoint-list no-style-list" data-role='checkpoint-list'>
                <li data-role='checkpoint-add-btn' class='list-item-add-btn'> + </li>
            </ul>
        </div>
    </div>
    <div class="book-page-bottom">
    </div>
    <br class="clear"/>
</li>