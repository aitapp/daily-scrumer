doctype 5
html
  head
    meta(charset='utf-8')
    title #{app.title}
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='shortcut icon', href='/fav.ico')
    block stylesheet

    script(src='/javascripts/jquery.js')
    script(src='/javascripts/revalidator.js')
    script(src='/javascripts/revalidator.msg.js')
    script(src='/javascripts/revalidator.schema.js')
    script(src='/javascripts/spin.js')
    script(src='/javascripts/view.js')
    script
        CS.team = !{team && JSON.stringify(team) || 'null'};
    block javascript

    block head


  body
    header

        .logo
            span#selected-team #{team.name}
        nav.nav-bar.positioned#head-nav
            a.nav-item(href='/team/#{team.name}/daily', data-key='daily')
                | #{msg.nav.daily}
            span.nav-separator
            a.nav-item(href='/team/#{team.name}/think_back', data-key='think_back')
                | #{msg.nav.think_back}
            span.nav-separator
            a.nav-item(href='/team/#{team.name}/setting', data-key='setting')
                | #{msg.nav.setting}
    #main
        block content

    footer


