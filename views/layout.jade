doctype 5
html
  head
    meta(charset='utf-8')
    title #{app.title}
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='shortcut icon', href='/fav.ico')
    block script

    script(src='/javascripts/jquery.js')
    script(src='/javascripts/spin.js')
    script(src='/javascripts/view.js')
    block javascript

    block head

  body
    header(data-login='#{!!login_user}')
        nav.nav-bar.positioned#head-nav
            a.nav-item(href='/', data-key='home')
                | #{msg.nav.home}
            span.nav-separator
            a.nav-item(href='/daily', data-key='daily')
                | #{msg.nav.daily}
            span.nav-separator
            a.nav-item(href='/think_back', data-key='think_back')
                | #{msg.nav.think_back}

            .nav-right-item
                span.show-when-login
                    span#login-user-name.nav-item-khaki
                        |#{login_user && login_user.name}
                    | @
                    select#user-project-select

                    a.dropdown-btn#user-dropdown-btn
                        .dropdown-btn-icon
                    ul.dropdown-menu.hidden.stick-right(
                        data-role='dropdown-menu',
                        data-btn='#user-dropdown-btn')
                        li.dropdown-menu-item
                            a#logout-btn.nav-item-blue
                                | #{msg.nav.logout}



                a#login-btn.nav-item-blue.show-when-not-login
                    | #{msg.nav.login}

        #login-dialog.stick-right(
            data-role='dialog',
            data-opener='#login-btn')
                a(data-role='closer').stick-right
                    | #{msg.btn.close}
                include parts/dialog.login-form.jade

    #main
        block content

    footer


