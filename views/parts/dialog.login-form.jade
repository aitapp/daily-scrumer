form#login-from(action='/auth', data-role='ajax-from', method='POST')
    .hidden.err-msg#login-err-msg #{msg.err.login_fail}
    table
        caption
            img.icon.redmine-icon(src='/images/redmine.fav.ico')
            |#{msg.label.login.caption}
        tr
            th
                label(for='login-username-input')
            td
                input#login-username-input(
                    name='username',
                    type='text',
                    placeholder='#{msg.label.login.username}'
                )
        tr
            th
                label(for='login-password-input')
            td
                input#login-password-input(
                    name='password',
                    type='password',
                    placeholder='#{msg.label.login.password}'
                )
    .btn-area
        a.btn.block-btn(data-role='submit-btn')
            | #{msg.btn.login}

